echo -e "\e[37;1m / ___ |/ /  / /_/ / /_/ / / / / /_/ / / / /  __/ /_/ /  \e[0m"
echo -e "\e[37;1m/_/  |_/_/   \__, /\____/_/ /_/\____/_/ /_/\___/\__,_/   \e[0m"
echo -e "\e[37;1m            /____/                                       \e[0m"
echo "_________________________________________________________"
echo -e "\e[1m>>> Restablecer compilaci贸n a mrprop...\e[0m"
make mrproper
echo -e "\e[1m>>> Ejecutando configuraci贸n previa a la compilaci贸n...\e[0m"
./configure $@
if [ $? -ne 0 ]
then
    echo -e "\e[31;1m>>> ERROR de configuracion...\e[0m"
    exit 1;
fi
echo -e "\e[1m>>> Compilando...\e[0m"
make all $@
if [ $? -ne 0 ]
then
    echo -e "\e[31;1m>>> ERROR de compilaci贸n...\e[0m"
    exit 1;
fi
echo -e "\e[1m>>> Instalando...\e[0m"
if [ "$EUID" -ne 0 ]
    then sudo make install
    else make install
fi
echo -e "\e[1m>>>  Completada\e[0m"
